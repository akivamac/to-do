        </div>
    </div>

    <script>
        // App version for update detection
        const APP_VERSION = '3.0';
        const CORRECT_PASSCODE = 'family2025';
        const SYNC_INTERVAL = 5000; // Sync every 5 seconds

        // Data storage
        let currentUser = null;
        let userName = '';
        let tasks = {};
        let hugGroups = [];
        let completedTasksCount = 0;
        let currentEditDay = null;
        let pendingTask = null;
        let pendingTaskCallback = null;
        let editingTaskIndex = null;
        let editingTaskIsEditDay = false;
        let familyMembers = []; // List of all family members who have accounts
        let syncInterval = null;

        const nameSuggestions = ['Sunshine', 'Star', 'Rose', 'Joy', 'Grace', 'Hope', 'Luna', 'Willow', 'Daisy', 'Pearl'];

        // Negative words detection
        const negativeWords = [
            'stop', 'quit', 'avoid', 'dont', "don't",
            'stress', 'stressed', 'stressing', 'worried', 'anxious', 'panic', 'worry',
            'hate', 'dread', 'terrible', 'awful', 'horrible',
            'fight', 'battle', 'struggle', 'combat',
            'fix', 'repair', 'broken', 'problem', 'issue', 'deal with',
            'fail', 'failure', 'mess', 'disaster',
            'force', 'must', 'have to', 'need to', 'got to', 'gotta'
        ];

        function detectNegativeTask(taskText) {
            const lowerText = taskText.toLowerCase();
            for (let word of negativeWords) {
                if (lowerText.includes(word)) {
                    return true;
                }
            }
            return false;
        }

        function generatePositiveAlternative(taskText) {
            let suggestion = taskText;
            const lower = taskText.toLowerCase();
            
            if (lower.includes('stop ')) {
                suggestion = taskText.replace(/stop /gi, 'Start moving away from ');
            } else if (lower.includes('quit ')) {
                suggestion = taskText.replace(/quit /gi, 'Begin reducing ');
            } else if (lower.includes('avoid ')) {
                suggestion = taskText.replace(/avoid /gi, 'Choose better options than ');
            } else if (lower.includes("don't ") || lower.includes('dont ')) {
                suggestion = taskText.replace(/don't /gi, 'Remember to ');
                suggestion = suggestion.replace(/dont /gi, 'Remember to ');
            } else if (lower.includes('stress')) {
                suggestion = taskText.replace(/stress about /gi, 'Plan calmly for ');
                suggestion = suggestion.replace(/stress/gi, 'focus on');
            } else if (lower.includes('worry')) {
                suggestion = taskText.replace(/worry about /gi, 'Prepare peacefully for ');
                suggestion = suggestion.replace(/worry/gi, 'prepare for');
            } else if (lower.includes('anxious')) {
                suggestion = taskText.replace(/anxious about /gi, 'Get ready for ');
                suggestion = suggestion.replace(/anxious/gi, 'mindful about');
            } else if (lower.includes('panic')) {
                suggestion = taskText.replace(/panic /gi, 'Breathe and handle ');
            } else if (lower.includes('hate ')) {
                suggestion = taskText.replace(/hate /gi, 'Complete ');
            } else if (lower.includes('dread ')) {
                suggestion = taskText.replace(/dread /gi, 'Get through ');
            } else if (lower.includes('terrible ')) {
                suggestion = taskText.replace(/terrible /gi, 'challenging ');
            } else if (lower.includes('awful ')) {
                suggestion = taskText.replace(/awful /gi, 'important ');
            } else if (lower.includes('horrible ')) {
                suggestion = taskText.replace(/horrible /gi, 'necessary ');
            } else if (lower.includes('fight ')) {
                suggestion = taskText.replace(/fight /gi, 'Work on ');
            } else if (lower.includes('battle ')) {
                suggestion = taskText.replace(/battle /gi, 'Manage ');
            } else if (lower.includes('struggle with ')) {
                suggestion = taskText.replace(/struggle with /gi, 'Make progress on ');
            } else if (lower.includes('struggle ')) {
                suggestion = taskText.replace(/struggle /gi, 'work on ');
            } else if (lower.includes('combat ')) {
                suggestion = taskText.replace(/combat /gi, 'Address ');
            } else if (lower.includes('fix ')) {
                suggestion = taskText.replace(/fix /gi, 'Improve ');
            } else if (lower.includes('repair ')) {
                suggestion = taskText.replace(/repair /gi, 'Restore ');
            } else if (lower.includes('broken ')) {
                suggestion = taskText.replace(/broken /gi, 'Update ');
            } else if (lower.includes('problem')) {
                suggestion = taskText.replace(/problem/gi, 'opportunity');
            } else if (lower.includes('deal with ')) {
                suggestion = taskText.replace(/deal with /gi, 'Take care of ');
            } else if (lower.includes('issue')) {
                suggestion = taskText.replace(/issue/gi, 'task');
            } else if (lower.includes('fail')) {
                suggestion = taskText.replace(/fail/gi, 'succeed at');
            } else if (lower.includes('mess')) {
                suggestion = taskText.replace(/mess/gi, 'situation');
            } else if (lower.includes('disaster')) {
                suggestion = taskText.replace(/disaster/gi, 'challenge');
            } else if (lower.includes('force myself to ') || lower.includes('force me to ')) {
                suggestion = taskText.replace(/force myself to /gi, 'Choose to ');
                suggestion = suggestion.replace(/force me to /gi, 'Choose to ');
            } else if (lower.includes('must ')) {
                suggestion = taskText.replace(/must /gi, 'Will ');
            } else if (lower.includes('have to ')) {
                suggestion = taskText.replace(/have to /gi, 'Get to ');
            } else if (lower.includes('need to ')) {
                suggestion = taskText.replace(/need to /gi, 'Choose to ');
            } else if (lower.includes('got to ') || lower.includes('gotta ')) {
                suggestion = taskText.replace(/got to /gi, 'Will ');
                suggestion = suggestion.replace(/gotta /gi, 'Will ');
            }
            
            return suggestion.trim();
        }

        function showTaskSuggestion(originalTask, callback) {
            const isNegative = detectNegativeTask(originalTask);
            
            if (isNegative) {
                pendingTask = originalTask;
                pendingTaskCallback = callback;
                
                const suggestion = generatePositiveAlternative(originalTask);
                document.getElementById('originalTaskText').textContent = originalTask;
                document.getElementById('suggestedTaskText').textContent = suggestion;
                document.getElementById('taskSuggestionModal').classList.add('active');
                return true;
            }
            
            return false;
        }

        function acceptTaskSuggestion() {
            const suggestedText = document.getElementById('suggestedTaskText').textContent;
            document.getElementById('taskSuggestionModal').classList.remove('active');
            
            if (pendingTaskCallback) {
                pendingTaskCallback(suggestedText);
            }
            
            pendingTask = null;
            pendingTaskCallback = null;
        }

        function declineTaskSuggestion() {
            document.getElementById('taskSuggestionModal').classList.remove('active');
            
            if (pendingTaskCallback) {
                pendingTaskCallback(pendingTask);
            }
            
            pendingTask = null;
            pendingTaskCallback = null;
        }

        // Edit Task Modal Functions
        function openEditTaskModal(index, isEditDay) {
            editingTaskIndex = index;
            editingTaskIsEditDay = isEditDay;
            
            const dateStr = isEditDay ? currentEditDay : formatDate(new Date());
            const task = tasks[dateStr][index];
            
            document.getElementById('editTaskName').value = task.text;
            document.getElementById('editTaskTimeInput').value = task.time || '';
            
            // Populate assign dropdown
            const assignSelect = document.getElementById('editTaskAssign');
            assignSelect.innerHTML = '<option value="">No one (just me)</option>';
            familyMembers.forEach(member => {
                if (member !== currentUser) {
                    const option = document.createElement('option');
                    option.value = member;
                    option.textContent = member;
                    if (task.assignedTo === member) {
                        option.selected = true;
                    }
                    assignSelect.appendChild(option);
                }
            });
            
            document.getElementById('editTaskModal').classList.add('active');
        }

        function cancelEditTask() {
            document.getElementById('editTaskModal').classList.remove('active');
            editingTaskIndex = null;
            editingTaskIsEditDay = false;
        }

        function saveEditTask() {
            const newName = document.getElementById('editTaskName').value.trim();
            const newTime = document.getElementById('editTaskTimeInput').value;
            const newAssign = document.getElementById('editTaskAssign').value;
            
            if (!newName) {
                alert('Task name cannot be empty!');
                return;
            }
            
            const dateStr = editingTaskIsEditDay ? currentEditDay : formatDate(new Date());
            const task = tasks[dateStr][editingTaskIndex];
            
            task.text = newName;
            task.time = newTime;
            task.assignedTo = newAssign;
            
            saveUserData();
            syncData();
            
            if (editingTaskIsEditDay) {
                renderEditDayTasks();
            } else {
                renderTodayTasks();
            }
            
            cancelEditTask();
        }

        // Cloud Sync Functions
        function syncData() {
            // Show syncing status
            const syncStatus = document.getElementById('syncStatus');
            syncStatus.textContent = '‚óè Syncing...';
            syncStatus.className = 'sync-status syncing';
            
            // Save to localStorage (simulating cloud sync)
            saveUserData();
            
            // Update sync status
            setTimeout(() => {
                syncStatus.textContent = '‚óè Synced';
                syncStatus.className = 'sync-status synced';
            }, 500);
        }

        function startAutoSync() {
            syncInterval = setInterval(() => {
                syncData();
            }, SYNC_INTERVAL);
        }

        function stopAutoSync() {
            if (syncInterval) {
                clearInterval(syncInterval);
                syncInterval = null;
            }
        }

        // Login System
        function checkPasscode() {
            const passcode = document.getElementById('passcodeInput').value.trim();
            
            if (passcode === CORRECT_PASSCODE) {
                document.getElementById('passcodeError').textContent = '';
                
                const accounts = JSON.parse(localStorage.getItem('todoAccounts') || '{}');
                
                if (Object.keys(accounts).length === 0) {
                    document.getElementById('passcodeStep').classList.add('hidden');
                    document.getElementById('createAccountStep').classList.remove('hidden');
                } else {
                    document.getElementById('passcodeStep').classList.add('hidden');
                    document.getElementById('loginStep').classList.remove('hidden');
                }
            } else {
                document.getElementById('passcodeError').textContent = 'Incorrect passcode. Please try again.';
            }
        }

        function createAccount() {
            const username = document.getElementById('usernameInput').value.trim();
            const password = document.getElementById('passwordInput').value;
            const confirmPassword = document.getElementById('confirmPasswordInput').value;
            
            if (!username || !password) {
                document.getElementById('createError').textContent = 'Please fill in all fields.';
                return;
            }
            
            if (password !== confirmPassword) {
                document.getElementById('createError').textContent = 'Passwords do not match.';
                return;
            }
            
            const accounts = JSON.parse(localStorage.getItem('todoAccounts') || '{}');
            
            if (accounts[username]) {
                document.getElementById('createError').textContent = 'Username already exists.';
                return;
            }
            
            accounts[username] = {
                password: password,
                data: {
                    userName: '',
                    tasks: {},
                    hugGroups: [],
                    completedTasksCount: 0
                }
            };
            
            localStorage.setItem('todoAccounts', JSON.stringify(accounts));
            currentUser = username;
            updateFamilyMembers();
            
            document.getElementById('loginScreen').classList.add('hidden');
            document.getElementById('onboardingModal').classList.remove('hidden');
        }

        function login() {
            const username = document.getElementById('loginUsername').value.trim();
            const password = document.getElementById('loginPassword').value;
            
            const accounts = JSON.parse(localStorage.getItem('todoAccounts') || '{}');
            
            if (!accounts[username]) {
                document.getElementById('loginError').textContent = 'Account not found.';
                return;
            }
            
            if (accounts[username].password !== password) {
                document.getElementById('loginError').textContent = 'Incorrect password.';
                return;
            }
            
            currentUser = username;
            updateFamilyMembers();
            loadUserData();
            
            document.getElementById('loginScreen').classList.add('hidden');
            document.getElementById('onboardingModal').classList.remove('hidden');
        }

        function logout() {
            if (confirm('Are you sure you want to logout?')) {
                stopAutoSync();
                saveUserData();
                currentUser = null;
                userName = '';
                tasks = {};
                hugGroups = [];
                completedTasksCount = 0;
                
                document.getElementById('mainApp').classList.add('hidden');
                document.getElementById('loginScreen').classList.remove('hidden');
                
                document.getElementById('passcodeStep').classList.remove('hidden');
                document.getElementById('createAccountStep').classList.add('hidden');
                document.getElementById('loginStep').classList.add('hidden');
                document.getElementById('passcodeInput').value = '';
                document.getElementById('loginUsername').value = '';
                document.getElementById('loginPassword').value = '';
            }
        }

        function updateFamilyMembers() {
            const accounts = JSON.parse(localStorage.getItem('todoAccounts') || '{}');
            familyMembers = Object.keys(accounts);
        }

        function loadUserData() {
            const accounts = JSON.parse(localStorage.getItem('todoAccounts') || '{}');
            if (accounts[currentUser]) {
                const data = accounts[currentUser].data;
                userName = data.userName || '';
                tasks = data.tasks || {};
                hugGroups = data.hugGroups || [];
                completedTasksCount = data.completedTasksCount || 0;
            }
        }

        function saveUserData() {
            if (!currentUser) return;
            
            const accounts = JSON.parse(localStorage.getItem('todoAccounts') || '{}');
            if (accounts[currentUser]) {
                accounts[currentUser].data = {
                    userName,
                    tasks,
                    hugGroups,
                    completedTasksCount
                };
                localStorage.setItem('todoAccounts', JSON.stringify(accounts));
            }
        }

        // Update notification
        function checkForUpdates() {
            const lastVersion = localStorage.getItem('appVersion');
            if (lastVersion && lastVersion !== APP_VERSION) {
                document.getElementById('updateBanner').classList.add('show');
            }
            localStorage.setItem('appVersion', APP_VERSION);
        }

        function dismissUpdate() {
            document.getElementById('updateBanner').classList.remove('show');
        }

        // Onboarding
        function nextOnboardingStep() {
            document.getElementById('step1').classList.add('hidden');
            document.getElementById('step2').classList.remove('hidden');
            suggestName();
        }

        function suggestName() {
            const suggestion = nameSuggestions[Math.floor(Math.random() * nameSuggestions.length)];
            document.getElementById('suggestedName').textContent = suggestion;
            document.getElementById('nameSuggestion').classList.remove('hidden');
        }

        function acceptSuggestedName() {
            userName = document.getElementById('suggestedName').textContent;
            document.getElementById('nameInput').value = userName;
            document.getElementById('nameSuggestion').classList.add('hidden');
        }

        function rejectSuggestedName() {
            suggestName();
        }

        function startApp() {
            const input = document.getElementById('nameInput').value.trim();
            if (input) {
                userName = input;
                saveUserData();
                document.getElementById('onboardingModal').classList.add('hidden');
                document.getElementById('mainApp').classList.remove('hidden');
                updateGreetings();
                renderDays();
                renderTodayTasks();
                renderHugs();
                startAutoSync();
            } else {
                alert('Please enter a name!');
            }
        }

        // Navigation
        function switchPage(page) {
            document.querySelectorAll('.page').forEach(p => p.classList.remove('active'));
            document.querySelectorAll('.nav-item').forEach(n => n.classList.remove('active'));
            
            document.getElementById(page + 'Page').classList.add('active');
            event.target.classList.add('active');

            if (page === 'days') renderDays();
            if (page === 'today') renderTodayTasks();
            if (page === 'hugs') renderHugs();
        }

        // Greetings
        function updateGreetings() {
            const greetings = [
                `Hello, ${userName}! ‚ú®`,
                `Welcome back, ${userName}! üå∏`,
                `Hi ${userName}! üí´`,
                `Good to see you, ${userName}! üå∫`
            ];
            const greeting = greetings[Math.floor(Math.random() * greetings.length)];
            
            document.getElementById('daysGreeting').textContent = greeting;
            document.getElementById('todayGreeting').textContent = greeting;
            document.getElementById('hugsGreeting').textContent = greeting;
        }

        // Days Page
        function renderDays() {
            const grid = document.getElementById('daysGrid');
            grid.innerHTML = '';
            
            const today = new Date();
            for (let i = 1; i < 91; i++) {
                const date = new Date(today);
                date.setDate(today.getDate() + i);
                const dateStr = formatDate(date);
                
                const dayTasks = tasks[dateStr] || [];
                const taskCount = dayTasks.length;
                const completedCount = dayTasks.filter(t => t.completed).length;
                
                const card = document.createElement('div');
                card.className = 'day-card';
                card.onclick = () => openDayEdit(dateStr);
                
                const dayName = i === 1 ? 'Tomorrow' : date.toLocaleDateString('en-US', { weekday: 'long' });
                
                card.innerHTML = `
                    <div class="day-date">${date.toLocaleDateString('en-US', { month: 'short', day: 'numeric', year: 'numeric' })}</div>
                    <div class="day-name">${dayName}</div>
                    <div class="task-count">${taskCount} task${taskCount !== 1 ? 's' : ''} (${completedCount} done)</div>
                `;
                
                grid.appendChild(card);
            }
        }

        // Day Edit Modal
        function openDayEdit(dateStr) {
            currentEditDay = dateStr;
            const date = new Date(dateStr);
            const today = new Date();
            today.setHours(0, 0, 0, 0);
            const targetDate = new Date(dateStr);
            targetDate.setHours(0, 0, 0, 0);
            const daysDiff = Math.floor((targetDate - today) / (1000 * 60 * 60 * 24));
            
            let title;
            if (daysDiff === 1) title = 'Tomorrow';
            else title = date.toLocaleDateString('en-US', { weekday: 'long', month: 'long', day: 'numeric' });
            
            document.getElementById('editDayTitle').textContent = title;
            document.getElementById('editDayTaskInput').value = '';
            document.getElementById('editDayTaskTime').value = '';
            renderEditDayTasks();
            document.getElementById('dayEditModal').classList.add('active');
        }

        function closeDayEdit() {
            document.getElementById('dayEditModal').classList.remove('active');
            currentEditDay = null;
            renderDays();
        }

        function renderEditDayTasks() {
            const list = document.getElementById('editDayTaskList');
            list.innerHTML = '';
            
            const dayTasks = tasks[currentEditDay] || [];
            
            dayTasks.forEach((task, index) => {
                const li = document.createElement('li');
                li.className = 'task-item' + (task.completed ? ' completed' : '');
                li.draggable = true;
                li.dataset.index = index;
                
                const timeDisplay = task.time || 'No time';
                const assignDisplay = task.assignedTo ? `<span class="assigned-to">${task.assignedTo}</span>` : '';
                
                li.innerHTML = `
                    <span class="drag-handle" draggable="false">‚ìÇÔ∏è</span>
                    <input type="checkbox" class="task-checkbox" ${task.completed ? 'checked' : ''} onchange="toggleEditDayTask(${index})" />
                    <span class="task-text" onclick="openEditTaskModal(${index}, true)">${task.text} ${assignDisplay}</span>
                    <span class="task-time" onclick="openEditTaskModal(${index}, true)">${timeDisplay}</span>
                    <button class="delete-btn" onclick="deleteEditDayTask(${index})">Delete</button>
                `;
                
                li.addEventListener('dragstart', handleDragStart);
                li.addEventListener('dragover', handleDragOver);
                li.addEventListener('drop', handleDrop);
                li.addEventListener('dragend', handleDragEnd);
                
                list.appendChild(li);
            });
        }

        function addTaskToEditDay() {
            const input = document.getElementById('editDayTaskInput');
            const timeInput = document.getElementById('editDayTaskTime');
            const text = input.value.trim();
            const time = timeInput.value;
            
            if (text) {
                const hasSuggestion = showTaskSuggestion(text, (finalText) => {
                    if (!tasks[currentEditDay]) tasks[currentEditDay] = [];
                    tasks[currentEditDay].push({
                        text: finalText,
                        time: time,
                        completed: false,
                        assignedTo: '',
                        id: Date.now()
                    });
                    renderEditDayTasks();
                    saveUserData();
                    syncData();
                });
                
                if (!hasSuggestion) {
                    if (!tasks[currentEditDay]) tasks[currentEditDay] = [];
                    tasks[currentEditDay].push({
                        text: text,
                        time: time,
                        completed: false,
                        assignedTo: '',
                        id: Date.now()
                    });
                    renderEditDayTasks();
                    saveUserData();
                    syncData();
                }
                
                input.value = '';
                timeInput.value = '';
            }
        }

        function toggleEditDayTask(index) {
            const task = tasks[currentEditDay][index];
            const wasCompleted = task.completed;
            task.completed = !task.completed;
            
            if (!wasCompleted && task.completed) {
                completedTasksCount++;
                checkHugReward();
            } else if (wasCompleted && !task.completed) {
                completedTasksCount--;
            }
            
            renderEditDayTasks();
            saveUserData();
            syncData();
        }

        function deleteEditDayTask(index) {
            if (tasks[currentEditDay][index].completed) {
                completedTasksCount--;
            }
            tasks[currentEditDay].splice(index, 1);
            renderEditDayTasks();
            saveUserData();
            syncData();
        }

        // Today Page
        function renderTodayTasks() {
            const today = formatDate(new Date());
            const list = document.getElementById('taskList');
            list.innerHTML = '';
            
            const todayTasks = tasks[today] || [];
            
            if (todayTasks.length === 0) {
                list.innerHTML = '<div class="empty-state">No tasks for today. Enjoy your day! üå∏</div>';
                return;
            }
            
            todayTasks.forEach((task, index) => {
                const li = document.createElement('li');
                li.className = 'task-item' + (task.completed ? ' completed' : '');
                li.draggable = true;
                li.dataset.index = index;
                
                const timeDisplay = task.time || 'No time';
                const assignDisplay = task.assignedTo ? `<span class="assigned-to">${task.assignedTo}</span>` : '';
                
                li.innerHTML = `
                    <span class="drag-handle" draggable="false">‚ìÇÔ∏è</span>
                    <input type="checkbox" class="task-checkbox" ${task.completed ? 'checked' : ''} onchange="toggleTask(${index})" />
                    <span class="task-text" onclick="openEditTaskModal(${index}, false)">${task.text} ${assignDisplay}</span>
                    <span class="task-time" onclick="openEditTaskModal(${index}, false)">${timeDisplay}</span>
                    <button class="delete-btn" onclick="deleteTask(${index})">Delete</button>
                `;
                
                li.addEventListener('dragstart', handleDragStart);
                li.addEventListener('dragover', handleDragOver);
                li.addEventListener('drop', handleDrop);
                li.addEventListener('dragend', handleDragEnd);
                
                list.appendChild(li);
            });
        }

        function addTask() {
            const input = document.getElementById('taskInput');
            const timeInput = document.getElementById('taskTime');
            const text = input.value.trim();
            const time = timeInput.value;
            
            if (text) {
                const hasSuggestion = showTaskSuggestion(text, (finalText) => {
                    const today = formatDate(new Date());
                    if (!tasks[today]) tasks[today] = [];
                    tasks[today].push({
                        text: finalText,
                        time: time,
                        completed: false,
                        assignedTo: '',
                        id: Date.now()
                    });
                    renderTodayTasks();
                    saveUserData();
                    syncData();
                });
                
                if (!hasSuggestion) {
                    const today = formatDate(new Date());
                    if (!tasks[today]) tasks[today] = [];
                    tasks[today].push({
                        text: text,
                        time: time,
                        completed: false,
                        assignedTo: '',
                        id: Date.now()
                    });
                    renderTodayTasks();
                    saveUserData();
                    syncData();
                }
                
                input.value = '';
                timeInput.value = '';
            }
        }

        function toggleTask(index) {
            const today = formatDate(new Date());
            const task = tasks[today][index];
            const wasCompleted = task.completed;
            task.completed = !task.completed;
            
            if (!wasCompleted && task.completed) {
                completedTasksCount++;
                checkHugReward();
            } else if (wasCompleted && !task.completed) {
                completedTasksCount--;
            }
            
            renderTodayTasks();
            saveUserData();
            syncData();
        }

        function deleteTask(index) {
            const today = formatDate(new Date());
            if (tasks[today][index].completed) {
                completedTasksCount--;
            }
            tasks[today].splice(index, 1);
            renderTodayTasks();
            saveUserData();
            syncData();
        }

        // Drag and Drop
        let draggedElement = null;

        function handleDragStart(e) {
            draggedElement = this;
            this.classList.add('dragging');
            e.dataTransfer.effectAllowed = 'move';
        }

        function handleDragOver(e) {
            if (e.preventDefault) {
                e.preventDefault();
            }
            e.dataTransfer.dropEffect = 'move';
            
            const afterElement = getDragAfterElement(this.parentElement, e.clientY);
            if (afterElement == null) {
                this.parentElement.appendChild(draggedElement);
            } else {
                this.parentElement.insertBefore(draggedElement, afterElement);
            }
            
            return false;
        }

        function handleDrop(e) {
            if (e.stopPropagation) {
                e.stopPropagation();
            }
            
            const list = this.parentElement;
            const items = Array.from(list.children);
            const newOrder = items.map(item => parseInt(item.dataset.index));
            
            const dateStr = currentEditDay || formatDate(new Date());
            const reorderedTasks = newOrder.map(i => tasks[dateStr][i]);
            tasks[dateStr] = reorderedTasks;
            
            saveUserData();
            syncData();
            
            return false;
        }

        function handleDragEnd(e) {
            this.classList.remove('dragging');
            
            if (currentEditDay) {
                renderEditDayTasks();
            } else {
                renderTodayTasks();
            }
        }

        function getDragAfterElement(container, y) {
            const draggableElements = [...container.querySelectorAll('.task-item:not(.dragging)')];
            
            return draggableElements.reduce((closest, child) => {
                const box = child.getBoundingClientRect();
                const offset = y - box.top - box.height / 2;
                
                if (offset < 0 && offset > closest.offset) {
                    return { offset: offset, element: child };
                } else {
                    return closest;
                }
            }, { offset: Number.NEGATIVE_INFINITY }).element;
        }

        // Hugs System
        function checkHugReward() {
            if (completedTasksCount % 5 === 0 && completedTasksCount > 0) {
                const now = new Date();
                const expiresAt = new Date(now);
                expiresAt.setDate(expiresAt.getDate() + 7);
                
                const weekStart = getWeekStart(now);
                let existingGroup = hugGroups.find(g => formatDate(new Date(g.date)) === formatDate(weekStart));
                
                if (existingGroup) {
                    existingGroup.count++;
                } else {
                    hugGroups.push({
                        date: weekStart.toISOString(),
                        count: 1,
                        expiresAt: expiresAt.toISOString()
                    });
                }
                
                saveUserData();
                syncData();
                alert(`ü§ó Congratulations ${userName}! You've earned a hug! Keep up the great work!`);
            }
        }

        function renderHugs() {
            const now = new Date();
            hugGroups = hugGroups.filter(g => new Date(g.expiresAt) > now);
            
            const total = hugGroups.reduce((sum, g) => sum + g.count, 0);
            document.getElementById('totalHugs').textContent = total;
            
            const container = document.getElementById('hugGroups');
            container.innerHTML = '';
            
            if (hugGroups.length === 0) {
                container.innerHTML = '<div class="empty-state">Complete tasks to earn hugs! ü§ó</div>';
                return;
            }
            
            hugGroups.sort((a, b) => new Date(b.date) - new Date(a.date));
            
            hugGroups.forEach(group => {
                const date = new Date(group.date);
                const expiresAt = new Date(group.expiresAt);
                const daysLeft = Math.ceil((expiresAt - now) / (1000 * 60 * 60 * 24));
                
                const div = document.createElement('div');
                div.className = 'hug-group';
                div.innerHTML = `
                    <div class="hug-group-info">
                        <div class="hug-group-date">Week of ${date.toLocaleDateString('en-US', { month: 'long', day: 'numeric' })}</div>
                        <div class="hug-group-count">${group.count} hug${group.count !== 1 ? 's' : ''} ü§ó</div>
                    </div>
                    <div class="hug-group-expires">${daysLeft} day${daysLeft !== 1 ? 's' : ''} left</div>
                `;
                container.appendChild(div);
            });
            
            saveUserData();
        }

        // Utilities
        function formatDate(date) {
            const year = date.getFullYear();
            const month = String(date.getMonth() + 1).padStart(2, '0');
            const day = String(date.getDate()).padStart(2, '0');
            return `${year}-${month}-${day}`;
        }

        function getWeekStart(date) {
            const d = new Date(date);
            const day = d.getDay();
            const diff = d.getDate() - day;
            return new Date(d.setDate(diff));
        }

        // Enter key support
        document.addEventListener('DOMContentLoaded', () => {
            document.getElementById('passcodeInput').addEventListener('keypress', (e) => {
                if (e.key === 'Enter') checkPasscode();
            });
            
            document.getElementById('confirmPasswordInput').addEventListener('keypress', (e) => {
                if (e.key === 'Enter') createAccount();
            });
            
            document.getElementById('loginPassword').addEventListener('keypress', (e) => {
                if (e.key === 'Enter') login();
            });
            
            document.getElementById('taskInput').addEventListener('keypress', (e) => {
                if (e.key === 'Enter') addTask();
            });
            
            document.getElementById('editDayTaskInput').addEventListener('keypress', (e) => {
                if (e.key === 'Enter') addTaskToEditDay();
            });
            
            document.getElementById('nameInput').addEventListener('keypress', (e) => {
                if (e.key === 'Enter') startApp();
            });
            
            checkForUpdates();
        });
    </script>
</body>
